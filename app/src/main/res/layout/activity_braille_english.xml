<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrailleEnglish"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn Braille Alphabets"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"/>
    <!-- Braille dot grid layout -->
    <GridLayout
        android:id="@+id/braille_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_gravity="center">

        <!-- Braille Dots (Buttons representing each dot in the 6-dot matrix) -->
        <Button
            android:id="@+id/dot1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="•"
            android:backgroundTint="#E0E0E0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/dot2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="•"
            android:backgroundTint="#E0E0E0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:id="@+id/dot3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="•"
            android:backgroundTint="#E0E0E0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            android:id="@+id/dot4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="•"
            android:backgroundTint="#E0E0E0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_row="1"
            android:layout_column="1"/>

        <Button
            android:id="@+id/dot5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="•"
            android:backgroundTint="#E0E0E0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_row="2"
            android:layout_column="0"/>

        <Button
            android:id="@+id/dot6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="•"
            android:backgroundTint="#E0E0E0"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_row="2"
            android:layout_column="1"/>
    </GridLayout>

    <!-- TextView to show the corresponding Braille character -->
    <TextView
        android:id="@+id/braille_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Braille Character: "
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:gravity="center"/>


</LinearLayout>