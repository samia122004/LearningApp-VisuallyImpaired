<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/drawer_layout"
    tools:context=".Dashboard">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ochre">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Special Minds"
            android:textColor="@android:color/white"
            style="@style/titleTextStyle" />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="300dp"
            android:contentDescription="Menu Icon"
            android:padding="16dp"
            android:src="@drawable/ic_menu"
            android:visibility="visible" />

    </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="80dp"
                android:padding="10dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/profile"/>

                <TextView
                    android:id="@+id/name"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="Name" />


            </LinearLayout>


    <GridLayout
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:columnCount="2"
        android:rowCount="3">


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cv1"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="150dp"
            app:cardElevation="4dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contentDescription="Maths"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/math" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Maths"
                    android:textAlignment="center"
                    android:textSize="18sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cv2"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Science"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    app:lottie_rawRes="@raw/maths"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Science"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/cv3"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="English"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        app:lottie_rawRes="@raw/english"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="English"
                        android:textAlignment="center"
                        android:textSize="18sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/cv4"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/l4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Test"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        app:lottie_rawRes="@raw/hindi"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Test"
                        android:textAlignment="center"
                        android:textSize="18sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cv5"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contentDescription="Braille"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/braille" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Braille"
                    android:textAlignment="center"
                    android:textSize="18sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cv6"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contentDescription="History"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/resulthist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="History"
                    android:textAlignment="center"
                    android:textSize="18sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:menu="@menu/main_drawer"
        app:headerLayout="@layout/nav_header"/>


</androidx.drawerlayout.widget.DrawerLayout>

